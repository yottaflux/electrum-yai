# If you want Electrum to appear in a Linux app launcher ("start menu"), install this by doing:
# sudo desktop-file-install electrum-yottaflux.desktop
# Note: This assumes $HOME/.local/bin is in your $PATH

[Desktop Entry]
Comment=Lightweight Yottaflux Client
Exec=electrum_yottaflux %u
GenericName[en_US]=Yottaflux Wallet
GenericName=Yottaflux Wallet
Icon=electrum
Name[en_US]=Electrum Yottaflux Wallet
Name=Electrum Yottaflux Wallet
Categories=Finance;Network;
StartupNotify=true
StartupWMClass=electrum_yottaflux
Terminal=false
Type=Application
MimeType=x-scheme-handler/yai
Actions=Testnet;

[Desktop Action Testnet]
Exec=electrum_yottaflux --testnet %u
Name=Testnet mode
